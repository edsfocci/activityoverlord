<div class="container">
  <h1><%= user.name %></h1>
  <% if (user.admin) { %>
    <img src="/images/admin.png" style="width:32px;height:33px" /> admin
  <% } else { %>
    <img src="/images/pawn.png" style="width:32px;height:32px" /> pawn
  <% } %>
  <h3><%= user.title %></h3>
  <hr />
  <h3>contact: <%= user.email %></h3>

  <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">
    Edit
  </a>
</div>

